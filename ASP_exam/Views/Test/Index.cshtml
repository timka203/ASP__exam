@model Test_info

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-heading">

    </div>
    <div class="panel-body">

        @using (Html.BeginForm("Test", "Test", new Game() { test_Info = Model, ans = new List<string>() }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Surname</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <input type="submit" value="Begin Test" class="btn btn-primary" />
        }
   
    </div>
</div>